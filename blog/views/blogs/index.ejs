<div class="hero">
    <h1>Welcome to My Blog</h1>
    <p>Discover amazing stories and insights</p>
    <% if (user) { %>
        <a href="/blogs/new" class="btn btn-primary">Write a Blog</a>
    <% } else { %>
        <a href="/auth/register" class="btn btn-primary">Join Us</a>
    <% } %>
</div>

<section class="blogs-section">
    <h2>Latest Blogs</h2>
    <% if (blogs.length === 0) { %>
        <p class="no-blogs">No blogs yet. Be the first to write one!</p>
    <% } else { %>
        <div class="blogs-grid">
            <% blogs.forEach(blog => { %>
                <article class="blog-card">
                    <h3><a href="/blogs/<%= blog._id %>"><%= blog.title %></a></h3>
                    <p class="blog-meta">
                        By <%= blog.author.username %> â€¢ 
                        <%= blog.createdAt.toLocaleDateString() %>
                    </p>
                    <p class="blog-excerpt"><%= blog.excerpt %></p>
                    <a href="/blogs/<%= blog._id %>" class="read-more">Read More</a>
                </article>
            <% }) %>
        </div>
    <% } %>
</section>